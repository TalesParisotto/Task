<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="mStyleEdittext" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingBottom">29dp</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">#ffffff</item>

    </style>
    <style name="mGrayEditTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColorHint">@color/colorGrayText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:backgroundTint">@color/colorGrayText</item>
    </style>
</resources>
